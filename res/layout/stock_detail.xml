<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 第一个Tab标签 -->

    <ScrollView
        android:id="@+id/sv_stock_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/lay_stock_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/bt_stock_detail_add"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Add" />

                    <Button
                        android:id="@+id/bt_stock_detail_edit"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Edit" />

                    <Button
                        android:id="@+id/bt_stock_detail_delete"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Delete" />

                    <Button
                        android:id="@+id/bt_stock_detail_save"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Save" />

                    <Button
                        android:id="@+id/bt_stock_detail_undo"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Undo" />

                    <Button
                        android:id="@+id/bt_stock_detail_first"
                        style="@style/stock_detail_top_bt_style"
                        android:text="First" />

                    <Button
                        android:id="@+id/bt_stock_detail_pre"
                        style="@style/stock_detail_top_bt_style"
                        android:layout_weight="1.1"
                        android:text="Previous" />

                    <Button
                        android:id="@+id/bt_stock_detail_next"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Next" />

                    <Button
                        android:id="@+id/bt_stock_detail_last"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Last" />

                    <Button
                        android:id="@+id/bt_stock_detail_refresh"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Refresh" />

                    <Button
                        android:id="@+id/bt_stock_detail_close"
                        style="@style/stock_detail_top_bt_style"
                        android:text="Close" />
                </LinearLayout>

                <View style="@style/view_devide_line_style" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="Stock Code" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Vendor Code" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:layout_height="85dp"
                            android:text="Vendor Name" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Vendor&apos;s Model No." />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:layout_height="145dp"
                            android:text="Description" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:layout_height="87dp"
                            android:text="Short Des" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Power" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Output Power(RMS)" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Output Power(PMPO)" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5sp"
                        android:gravity="left"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/et_stock_detail_stock_code"
                                style="@style/stock_detail_text_et_style"
                                android:layout_width="200dp" />

                            <CheckBox
                                android:id="@+id/cb_stock_detail_active"
                                android:layout_width="wrap_content"
                                android:layout_height="40sp"
                                android:layout_marginLeft="5dp"
                                android:enabled="false"
                                android:text="Active" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/et_stock_detail_vendor_code"
                                style="@style/stock_detail_text_et_style"
                                android:layout_width="200dp" />

                            <Button
                                android:id="@+id/bt_stock_detail_find_vendor"
                                android:layout_width="wrap_content"
                                android:layout_height="40sp"
                                android:layout_marginLeft="5dp"
                                android:text="Find Vendor" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_stock_detail_vendor_name"
                            style="@style/stock_detail_text_et_style"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:gravity="top"
                            android:lines="3" />

                        <EditText
                            android:id="@+id/et_stock_detail_vendor_model_no"
                            style="@style/stock_detail_text_et_style" />

                        <EditText
                            android:id="@+id/et_stock_detail_des"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:gravity="top"
                            android:lines="6" />

                        <EditText
                            android:id="@+id/et_stock_detail_short_des"
                            style="@style/stock_detail_text_et_style"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:gravity="top"
                            android:lines="3" />

                        <EditText
                            android:id="@+id/et_stock_detail_power_RMS"
                            style="@style/stock_detail_text_et_style" />

                        <EditText
                            android:id="@+id/et_stock_detail_output_power_RMS"
                            style="@style/stock_detail_text_et_style" />

                        <EditText
                            android:id="@+id/et_stock_detail_output_power_PMPO"
                            style="@style/stock_detail_text_et_style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="5sp"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Client&apos;s Model No." />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Unit" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Unit Price" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Ref.Cost" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="First Date" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Brand" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Category" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Gift Box Barcode" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Carton Box Barcode" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Product Barcode" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="Class" />

                        <TextView
                            style="@style/stock_detail_text_tv_style"
                            android:text="SubClass" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5sp"
                        android:gravity="left"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_stock_detail_client_model_no"
                            style="@style/stock_detail_text_et_style"
                            android:layout_width="fill_parent"
                            android:enabled="false" />

                        <Spinner
                            android:id="@+id/sp_stock_detail_unit"
                            android:layout_width="fill_parent"
                            android:layout_height="40sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Spinner
                                android:id="@+id/sp_stock_detail_unit_price"
                                android:layout_width="120dp"
                                android:layout_height="40sp"
                                android:clickable="false" />

                            <EditText
                                android:id="@+id/et_stock_detail_unit_price"
                                android:layout_width="fill_parent"
                                android:layout_height="40sp"
                                android:enabled="false"
                                android:gravity="right"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Spinner
                                android:id="@+id/sp_stock_detail_ref_cost"
                                android:layout_width="120dp"
                                android:layout_height="40sp"
                                android:clickable="false" />

                            <EditText
                                android:id="@+id/et_stcok_detail_ref_cost"
                                android:layout_width="fill_parent"
                                android:layout_height="40sp"
                                android:enabled="false"
                                android:gravity="right"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_stock_detail_first_date"
                            android:layout_width="fill_parent"
                            android:layout_height="40sp"
                            android:enabled="false"
                            android:inputType="date" />

                        <Spinner
                            android:id="@+id/sp_stock_detail_brand"
                            style="@style/stock_detail_text_et_right_style"
                            android:clickable="false" />

                        <Spinner
                            android:id="@+id/sp_stock_detail_category"
                            style="@style/stock_detail_text_et_right_style"
                            android:clickable="false" />

                        <EditText
                            android:id="@+id/et_stock_detail_gift"
                            style="@style/stock_detail_text_et_right_style"
                            android:enabled="false" />

                        <EditText
                            android:id="@+id/et_stock_detail_carton"
                            style="@style/stock_detail_text_et_right_style"
                            android:enabled="false" />

                        <EditText
                            android:id="@+id/et_stock_detail_product"
                            style="@style/stock_detail_text_et_right_style"
                            android:enabled="false" />

                        <Spinner
                            android:id="@+id/sp_stock_detail_class"
                            style="@style/stock_detail_text_et_right_style"
                            android:clickable="false" />

                        <Spinner
                            android:id="@+id/sp_stock_detail_sub_class"
                            style="@style/stock_detail_text_et_right_style"
                            android:clickable="false" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pb_stock_detail_loading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>
    <!-- 第二个页面 -->

    <RelativeLayout
        android:id="@+id/stock_detail_lay_pic"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="3dp" >

        <LinearLayout
            android:id="@+id/lay_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_stock_detail_select_img"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选择图片" />

            <Button
                android:id="@+id/bt_stock_detail_upload_img"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上传图片"
                android:visibility="gone" />
        </LinearLayout>

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_stock_detail_viewer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/lay_pic" />

        <ProgressBar
            android:id="@+id/pb_stock_detail_pic_loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>