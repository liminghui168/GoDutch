<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 第一个Tab标签 -->

    <ScrollView
        android:id="@+id/sv_stock_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/lay_stock_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:orientation="vertical" >

                    
                    <TextView
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        style="@style/stock_detail_text_tv_style"
                        android:text="Stock Code" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Vendor Code" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Vendor Name" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Vendor&apos;s Model No." />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:layout_height="145dp"
                        android:text="Short Des" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Power" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Output Power(RMS)" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Output Power(PMPO)" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5sp"
                    android:gravity="left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/et_stock_detail_stock_code"
                            style="@style/stock_detail_text_et_style"
                            android:layout_width="200dp" />

                        <CheckBox
                            android:id="@+id/cb_stock_detail_active"
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:layout_marginLeft="5dp"
                            android:text="Active" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/et_stock_detail_vendor_name"
                            style="@style/stock_detail_text_et_style"
                            android:layout_width="200dp" />

                        <Button
                            android:id="@+id/bt_stock_detail_find_vendor"
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:layout_marginLeft="5dp"
                            android:text="Find Vendor" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_stock_detail_vendor_name"
                        style="@style/stock_detail_text_et_style" />

                    <EditText
                        android:id="@+id/et_stock_detail_vendor_model_no"
                        style="@style/stock_detail_text_et_style" />

                    <EditText
                        android:id="@+id/et_stock_detail_short_des"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:gravity="top"
                        android:lines="6" />

                    <EditText
                        android:id="@+id/et_stock_detail_power_RMS"
                        style="@style/stock_detail_text_et_style" />

                    <EditText
                        android:id="@+id/et_stock_detail_output_power_RMS"
                        style="@style/stock_detail_text_et_style" />

                    <EditText
                        android:id="@+id/et_stock_detail_output_power_PMPO"
                        style="@style/stock_detail_text_et_style" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Client&apos;s Model No." />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Unit" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Unit Price" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Ref.Cost" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="First Date" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Brand" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Category" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Gift Box Barcode" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Carton Box Barcode" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Product Barcode" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="Class" />

                    <TextView
                        style="@style/stock_detail_text_tv_style"
                        android:text="SubClass" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5sp"
                    android:gravity="left"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/et_stock_detail_client_model_no"
                        style="@style/stock_detail_text_et_style"
                        android:layout_width="fill_parent"
                        android:enabled="false" />

                    <Spinner
                        android:id="@+id/sp_stock_detail_unit"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                         />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Spinner
                            android:id="@+id/sp_stock_detail_unit_price"
                            android:layout_width="120dp"
                            android:layout_height="40sp"
                             />

                        <EditText
                            android:id="@+id/et_stock_detail_unit_price"
                            android:layout_width="fill_parent"
                            android:layout_height="40sp"
                            android:enabled="false"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Spinner
                            android:id="@+id/sp_stock_detail_ref_cost"
                            android:layout_width="120dp"
                            android:layout_height="40sp"
                             />

                        <EditText
                            android:id="@+id/et_stcok_detail_ref_cost"
                            android:layout_width="fill_parent"
                            android:layout_height="40sp"
                            android:enabled="false"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_stock_detail_first_date"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:enabled="false"
                        android:inputType="date" />

                    <Spinner
                        android:id="@+id/sp_stock_detail_brand"
                        style="@style/stock_detail_text_et_right_style"
                         />

                    <Spinner
                        android:id="@+id/sp_stock_detail_category"
                        style="@style/stock_detail_text_et_right_style"
                        />

                    <EditText
                        android:id="@+id/et_stock_detail_gift"
                        style="@style/stock_detail_text_et_right_style"
                        android:enabled="false" />

                    <EditText
                        android:id="@+id/et_stock_detail_carton"
                        style="@style/stock_detail_text_et_right_style"
                        android:enabled="false" />

                    <EditText
                        android:id="@+id/et_stock_detail_product"
                        style="@style/stock_detail_text_et_right_style"
                        android:enabled="false" />

                    <Spinner
                        android:id="@+id/sp_stock_detail_class"
                        style="@style/stock_detail_text_et_right_style"
                         />

                    <Spinner
                        android:id="@+id/sp_stock_detail_sub_class"
                        style="@style/stock_detail_text_et_right_style"
                       />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- 第二个页面 -->

    <LinearLayout
        android:id="@+id/stock_detail_lay_pic"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <AnalogClock
            android:id="@+id/widget36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </AnalogClock>
    </LinearLayout>

</FrameLayout>