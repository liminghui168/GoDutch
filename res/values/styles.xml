<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ListBottomBox">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:cacheColorHint">@color/transparent</item>
    </style>

    <style name="stock_item_text_style">
        <item name="android:id">@+id/tv_main_stock_body_brand</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#D4D0C7</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">test1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="stock_detail_text_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="stock_detail_text_et_style">
        <item name="android:layout_width">310sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:enabled">false</item>
    </style>
    
    <style name="stock_detail_text_et_right_style">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>